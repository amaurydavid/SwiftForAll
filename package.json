{
  "name": "SwiftForAll",
  "version": "0.1.0",
  "description": "Generates Swift styleguide on all project types.",
  "scripts": {
    "start": "zem start",
    "build": "zem build",
    "clean": "zem clean",
    "exec": "zem exec",
    "publish": "zem publish"
  },
  "zeplin": {
    "displayName": "SwiftForAll",
    "projectTypes": [
      "android",
      "ios",
      "osx",
      "web"
    ],
    "options": [
      {
        "name": "Color structure name",
        "type": "text",
        "id": "colorStructName",
        "default": "MyProject"
      },
      {
        "name": "Font format in text styles",
        "type": "picker",
        "id": "fontFormat",
        "options": [
          {
            "name": "System",
            "value": "system"
          },
          {
            "name": "SwiftGen",
            "value": "swiftgen"
          }
        ],
        "default": "system"
      }
    ]
  },
  "dependencies": {
    "camel-case": "^3.0.0",
    "zem": "^0.3.3"
  }
}
